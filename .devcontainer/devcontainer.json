{
  "name": "Firefox Power",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "docker-in-docker": "latest"
  },
  "forwardPorts": [
    5800
  ],
  "postCreateCommand": "docker run -d --rm -p 5800:5800 -v /tmp/firefox:/config jlesage/firefox",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}